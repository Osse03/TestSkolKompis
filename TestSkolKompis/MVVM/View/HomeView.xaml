<UserControl x:Class="TestSkolKompis.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestSkolKompis.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text=""
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>


        <StackPanel Orientation="Horizontal">
            <Button Width="400"
                    Height="200"
                    Click="OpenWindow1Button_Click">

                <Button.Background>

                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#FF3F51B5" Offset="0.0"/>
                        <GradientStop Color="#FF2196F3" Offset="1"/>
                    </LinearGradientBrush>

                </Button.Background>

                <Button.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10"
                                       Rect="0,0,400,200"/>
                </Button.Clip>

                <Grid>

                    <StackPanel Margin="-144,0,0,0">

                        <TextBlock Text=" Slumpa fram &#x0a; din nya skolkompis"
                                   Foreground="White"
                                   FontSize="25"
                                   Margin="20,10,10,0"/>

                        <TextBlock Text="Matcha med andra &#x0a;och gör skolan till en roligare miljö"
                                   Foreground="White"
                                   FontSize="15"
                                   Margin="20,20,10,0"/>
                    </StackPanel>

                    <Image Width="250"
                           Height="250"
                           Source="/Images/ChatGPT Image 8 maj 2025 02_59_39.png"
                           HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.5" Margin="0,56,-234,-110">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-10.567"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Grid>

            </Button>

            <Button Width="200" 
        Height="200"
        Click="OpenWindow2Button_Click"
        Margin="45,0,0,0">

                <Button.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,400,200"/>
                </Button.Clip>

                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#ffc554" Offset="0.0"/>
                        <GradientStop Color="#FF2196F3" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>

                <!-- Här börjar lösningen! -->
                <Grid>

                    <!-- Texten -->
                    <TextBlock Text="Upptäck personer &#x0a;med liknande intressen"
                   Foreground="Black"
                   FontSize="17"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top"
                   Margin="10,-46,0,0"/>

                    <!-- Bilden -->
                    <Image Width="120"
               Height="118"
               Source="/Images/studentSöker.png"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Margin="0,0,-18,-122" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-14.832"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Grid>
            </Button>
        </StackPanel>

        <StackPanel>

            <StackPanel.Resources>

                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="15,0,0,0"/>
                </Style>

            </StackPanel.Resources>


            <TextBlock Text="Utforska"
            Foreground="White"
            FontSize="20"
            HorizontalAlignment="Left"
            Margin="0,0,0,10"/>


            <StackPanel Orientation="Horizontal">

                <Border Width="150"
                        Height="150"
                        Background="#3B3B5C"
                        CornerRadius="10"
                        Margin="0">

                    <TextBlock Text=" Upptäck vänner &#x0a; enkelt och tryggt "
                              Foreground="White"
                              FontSize="16" Height="72" HorizontalAlignment="Left" 
                           VerticalAlignment="Center"/>


                </Border>

                <Border Width="150"
                       Height="150"
                       Background="#4B5D82"
                       CornerRadius="10">

                    <TextBlock Text="Utforska campus på &#x0a;ett nytt sätt"
                              Foreground="White"
                              FontSize="16" Height="57" HorizontalAlignment="Left" 
                           VerticalAlignment="Center"/>
                </Border>

                <Border Width="150"
                       Height="150"
                      Background="#5C728E"
                      CornerRadius="10">


                    <TextBlock Text=" Av studenter för &#x0a;studenter"
                              Foreground="White"
                              FontSize="16" Height="57" HorizontalAlignment="Left" 
                           VerticalAlignment="Center"/>
                </Border>

                <Border Width="150"
                        Height="150"
                        Background="#667FA3"
                        CornerRadius="10">

                    <TextBlock Text=" Mer om skolkompis"
                             Foreground="White"
                             FontSize="16" Height="33" HorizontalAlignment="Left" 
                              VerticalAlignment="Center"/>


                </Border>


            </StackPanel>

        </StackPanel>

    </StackPanel>

</UserControl>
