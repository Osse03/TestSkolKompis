<UserControl x:Class="TestSkolKompis.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestSkolKompis.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Utforska"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>

        
        <StackPanel Orientation="Horizontal">
            <Border Width="400"
                    Height="200"
                    >

                <Border.Background>

                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#FF3F51B5" Offset="0.0"/>
                        <GradientStop Color="#FF2196F3" Offset="1"/>
                    </LinearGradientBrush>
                    
                </Border.Background>

                <Border.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10"
                                       Rect="0,0,400,200"/>
                </Border.Clip>

                <Grid>

                    <StackPanel>

                        <TextBlock Text="Hitta nya vänner &#x0a; i din område"
                                   Foreground="White"
                                   FontSize="25"
                                   Margin="20,10,10,0"/>

                        <TextBlock Text=" Börja idag !! &#x0a;Matcha med andra &#x0a; och gör skolan till roligare miljö"
                                   Foreground="White"
                                   FontSize="15"
                                   Margin="20,10,10,0"/>
                    </StackPanel>

                    <Image Width="250"
                           Height="250"
                           Source="/Images/ChatGPT Image 8 maj 2025 02_59_39.png"
                           HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.5" Margin="0,61,-102,-110">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-10.567"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Grid>
                
            </Border>

            <Border Width="200" 
                    Height="200"
                    CornerRadius="10"
                    Margin="45,0,0,0">

                <Border.Background>

                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#ffc554" Offset="0.0"/>
                        <GradientStop Color="#FF2196F3" Offset="1"/>
                    </LinearGradientBrush>

                </Border.Background>
            </Border>
        </StackPanel>

        <StackPanel>

            <StackPanel.Resources>

                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="15,0,0,0"/>
                </Style>

            </StackPanel.Resources>
            
            
            <TextBlock Text="Mer om oss"
            Foreground="White"
            FontSize="20"
            HorizontalAlignment="Left"
            Margin="0,0,0,10"/>


            <StackPanel Orientation="Horizontal">

                <Border Width="150"
                        Height="150"
                        Background="#3B3B5C"
                        CornerRadius="10"
                        Margin="0"/>

                <Border Width="150"
                       Height="150"
                       Background="#4B5D82"
                       CornerRadius="10"/>

                <Border Width="150"
                       Height="150"
                      Background="#5C728E"
                      CornerRadius="10"/>

                <Border Width="150"
                        Height="150"
                        Background="#667FA3"
                        CornerRadius="10"/>
                

            </StackPanel>

        </StackPanel>
        
        
        
        
    </StackPanel>
    
</UserControl>
